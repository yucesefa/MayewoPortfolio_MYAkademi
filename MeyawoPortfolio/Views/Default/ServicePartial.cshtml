﻿@model List<MeyawoPortfolio.Models.tblService>

<section class="section" id="service">
    <div class="container text-center">
        <p class="section-subtitle">Ne Yapıyorum ?</p>
        <h6 class="section-title mb-6">Hizmetlerim</h6>
        <!-- row -->
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="service-card">
                        <div class="body">
                            <img src="@item.ImageUrl"
                                 alt=""
                                 class="icon">
                            <h6 class="title">@item.Title</h6>
                            <p class="subtitle">
                                <a href="#contact" style="color:darkslateblue">@item.Description</a>
                            </p>
                        </div>
                    </div>
                </div>
            }


        </div><!-- end of row -->
    </div>
</section>