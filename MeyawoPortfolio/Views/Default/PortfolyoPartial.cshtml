@model List<MeyawoPortfolio.Models.tblProject>
<section class="section" id="portfolio">
    <div class="container text-center">
        <p class="section-subtitle">Ne Yapıyorum ?</p>
        <h6 class="section-title mb-6">Projelerim</h6>
        <!-- row -->
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <a href="@item.ProjectUrl" class="portfolio-card">
                        <img src="@item.ImageUrl" class="portfolio-card-img" style="width:100px;height:100px;"
                             alt="@item.Description">
                        <span class="portfolio-card-overlay" style="shape-rendering:geometricPrecision">
                            <span class="portfolio-card-caption">
                                <h4>@item.Title</h4>
                                <!-- <p class="font-weight-normal">Category: Web Templates</p>-->
                            </span>
                        </span>
                    </a>
                </div>
            }


        </div><!-- end of row -->
    </div><!-- end of container -->
</section>

