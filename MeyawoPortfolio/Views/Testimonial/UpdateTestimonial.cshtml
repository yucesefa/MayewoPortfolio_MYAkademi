@model MeyawoPortfolio.Models.tblTestimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Referanslar Güncelleme</h2>
<form method="post">
    @Html.HiddenFor(x => x.TestimonialID)
    <label>İsim & Soyisim</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "table table-hover" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "table table-hover" })
    <br />
    <label>Resim</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "table table-hover" })
    <br />
    <label>Durum</label>
    @Html.TextBoxFor(x => x.Status, new { @class = "table table-hover" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>


