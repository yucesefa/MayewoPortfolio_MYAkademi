@model MeyawoPortfolio.Models.tblFuture
@{
    ViewBag.Title = "CreateFuture";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Yenş Öne Çıkanlar Girişi</h2>
<form method="post">
    @Html.HiddenFor(x => x.FutureID)
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Header, new { @class = "table table-hover" })
    <br />
    <label>İsim & Soyisim</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "table table-hover" })
    <br />
    <label>Unvan</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "table table-hover" })
    <br />
    <button class="btn btn-info">Ekle</button>

</form>

